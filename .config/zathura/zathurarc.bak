set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set statusbar-basename 1
set selection-notification 0
set page-padding 1
set font "JetBrains Mono 12"
# set font "Fira Code 12"
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
set recolor
set recolor-keephue
map p print
map gg goto top
map Q quit


